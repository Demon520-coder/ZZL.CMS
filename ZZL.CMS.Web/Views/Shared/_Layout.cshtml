                    <br />
                    <a class="login btn">立即登陆</a>
                    <a class="regnow btn">注册</a>
                </p>
            </div>
        </div>
    </div>
    <!--弹窗登录窗口结束  --->

    <div id="wrapper">
        <!--head start-->
        <div id="head">
            <!--top start -->
            <div class="top">
                <div class="TopInfo">
                    <div class="link">
                        <div style="float:left;">
                            <a href="index.html">魅族商城</a>
